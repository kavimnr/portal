  </servlet>

    <servlet-mapping>
        <servlet-name>JerseyController</servlet-name>
        <url-pattern>/apis/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>ViewBenefitController</servlet-name>
    	<url-pattern>/viewBenefits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>ViewMembersController</servlet-name>
    	<url-pattern>/viewMembers</url-pattern>
    </servlet-mapping>
</web-app>
