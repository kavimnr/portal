  	<servlet-class>com.portal.controller.SaveEmployee</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmployeeViewController</servlet-name>
  	<display-name>EmployeeViewController</display-name>
  	<description></description>
  	<servlet-class>com.portal.controller.EmployeeViewController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UpdateController</servlet-name>
